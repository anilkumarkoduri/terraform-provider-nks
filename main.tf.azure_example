resource "stackpoint_cluster" "my-cluster" {
	org_id                = "${var.org_id}"
        cluster_name          = "Test AWS Cluster TerraForm 2"
        provider_name         = "${var.azure_code}"
        provider_keyset       = "${var.azure_keyset}"
	region                = "${var.azure_region}"
	zone		      = "${var.azure_zone}"
	provider_resource_group = "${var.azure_resource_group}"
	provider_network_id   = "${var.azure_network_id}" 
	provider_network_cidr = "${var.azure_network_cidr}"
	provider_subnet_id    = "${var.azure_subnet_id}"
	provider_subnet_cidr  = "${var.azure_subnet_cidr}"
        master_count          = "1"
        master_size           = "${var.azure_master_size}"
        worker_count          = "2"
        worker_size           = "${var.azure_worker_size}"
        k8s_version           = "${var.azure_k8s_version}"
        rbac_enabled          = true
        dashboard_enabled     = true
        etcd_type             = "classic"
        platform              = "${var.azure_platform}"
        channel               = "stable"
        ssh_keyset            = "${var.ssh_keyset}"
	solutions	      = ["helm_tiller"]
}
